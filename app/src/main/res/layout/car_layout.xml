<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <View
        android:id="@+id/divider_car"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        tools:ignore="DuplicateIds" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Coche: "
                    android:textSize="15dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/car_brand"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="_Marca____ " />
                <TextView
                    android:id="@+id/car_model"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Modelo " />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="Matricula: " />
                <TextView
                    android:id="@+id/car_plate"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Matricula " />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="Km Actual: " />
                <TextView
                    android:id="@+id/car_km"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Km " />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="Proxima ITV " />
                <TextView
                    android:id="@+id/car_itv"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Fecha ITV " />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/car_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/yellow_500"
            android:layout_gravity="center"
            android:text="Editar" />

    </LinearLayout>

</LinearLayout>